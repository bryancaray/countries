<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageDetailFlag"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginBottom="24dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textDetailCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afghanistan (AF)"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textCapital"
            style="@style/DetailText"
            android:text="Capital: Kabul" />

        <TextView
            android:id="@+id/textRegion"
            style="@style/DetailText"
            android:text="Region: AS" />

        <TextView
            android:id="@+id/textLanguage"
            style="@style/DetailText"
            android:text="Language: Pashto (ps)" />

        <TextView
            android:id="@+id/textCurrency"
            style="@style/DetailText"
            android:text="Currency: Afghan afghani (AFN) Ø‹" />
    </LinearLayout>
</ScrollView>
